ZSH_THEME="avit"
export ZSH=$HOME/.oh-my-zsh
export PATH="$HOME/.bin:$HOME/.rbenv/bin:$PATH"

setnvm() {
 if [ "$PWD" != "$MYOLDPWD" ]; then
   MYOLDPWD="$PWD";
   if [ -e "$PWD/.nvmrc" ]; then
     nvm use
   fi
 fi
}

function cd () { builtin cd "$@" && setnvm; }

source $ZSH/oh-my-zsh.sh

eval "$(rbenv init -)"

vr() {
   . deepfind $@
}

. ~/.nvm/nvm.sh
